                        IsPlaybackRateButtonVisible="True" 
                        IsPlaybackRateEnabled="True" 
                        IsFastForwardButtonVisible="True" 
                        IsFastForwardEnabled="True" 
                        IsFastRewindButtonVisible="True" 
                        IsFastRewindEnabled="True" HorizontalAlignment="Stretch"/>
                </MediaPlayerElement.TransportControls>
            </MediaPlayerElement>
                       <Button x:Name="btnPickSong" Content="Pick a Song" Click="PickSong_Click" HorizontalAlignment="Left" Margin="143,447,0,0" VerticalAlignment="Top" Height="35" Width="172"/>
            <Button x:Name="btnPlay" Content="Play" Click="Play_Click" HorizontalAlignment="Left" Margin="143,387,0,0" VerticalAlignment="Top" Width="172"/> 
        </StackPanel>-->

    </Grid>
</Page>
